<%- model_class = Rover -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:landing_x_axis) %>:</strong></dt>
  <dd><%= @rover.landing_x_axis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:landing_y_axis) %>:</strong></dt>
  <dd><%= @rover.landing_y_axis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:target_x_axis) %>:</strong></dt>
  <dd><%= @rover.target_x_axis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:target_y_axis) %>:</strong></dt>
  <dd><%= @rover.target_y_axis %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rovers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rover_path(@rover), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rover_path(@rover),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
