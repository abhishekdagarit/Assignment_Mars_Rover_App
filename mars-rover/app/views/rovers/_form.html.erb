<%= form_for @rover, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :landing_x_axis, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :landing_x_axis, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :landing_y_axis, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :landing_y_axis, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target_x_axis, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :target_x_axis, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target_y_axis, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :target_y_axis, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rovers_path, :class => 'btn' %>
  </div>
<% end %>
